@model List<EntityLayer.Concrete.ProjectWhatIdo>  

<section class="services py-md-5 py-4" id="services">
    <div class="container">
        <div class="inner-sec-w3ls py-md-5 py-4">
            <h4 class="sub-tittle-w3 text-uppercase text-center">Hakkında</h4>
            <h3 class="tittle-w3 text-uppercase mb-lg-5 mb-3 text-center text-white">Bu Projede Neler Yaptım</h3>
            <div class="price-right">
                <div class="tabs">
                    <ul class="nav nav-pills my-md-5 my-3 justify-content-center" id="pills-tab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Yaptıklarım 1</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Yaptıklarım 2</a>
                        </li>

                    </ul>
                    @{
                        int i = 0;
                        string[] iconsTab1 = { "fas fa-list-ul", "far fa-lightbulb", "far fa-clone" };
                        string[] iconsTab2 = { "far fa-heart", "fas fa-magic", "fas fa-sliders-h" };

                    }
                    <div class="tab-content" id="pills-tabContent">
                        <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                            <div class="menu-grids mt-4">
                                <div class="row t-in">
                                    @foreach (var item in Model.Where(x => x.TabID == 1))
                                    {
                                        var iconClass = iconsTab1[i % iconsTab1.Length];
                                        <div class="col-lg-4 service-in text-center" data-aos="flip-up">

                                            <div class="card">
                                                <div class="card-body">
                                                    <i class="@iconClass mb-4"></i>
                                                    <h5 class="card-title text-uppercase">@item.Title</h5>
                                                    <p class="card-text">@item.Description</p>
                                                </div>
                                            </div>

                                        </div>
                                        i++;
                                    }
                                </div>

                            </div>

                        </div>
                        <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
                            <div class="menu-grids mt-4">
                                <div class="row t-in">
                                    @foreach (var item in Model.Where(x => x.TabID == 2))
                                    {
                                        var iconClass2 = iconsTab2[i % iconsTab2.Length];
                                        <div class="col-lg-4 service-in text-center">
                                            <div class="card">
                                                <div class="card-body">
                                                    <i class="@iconClass2 mb-4"></i>
                                                    <h5 class="card-title">@item.Title</h5>
                                                    <p class="card-text">@item.Description</p>
                                                </div>
                                            </div>

                                        </div>
                                        i++;
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
